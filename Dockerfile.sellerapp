FROM golang:1.24-bullseye AS builder

WORKDIR /app
COPY cmd/sellerApp  ./cmd/sellerApp
COPY shared/ ./shared
COPY go.mod .
COPY go.sum .
RUN go mod download

RUN go build -o server cmd/sellerApp/main.go

RUN ls -la 
# Create a minimal runtime image
